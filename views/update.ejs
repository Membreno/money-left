<div class="container">
  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h2 class="text-center text-primary mb-3"><i class="fas fa-file-invoice-dollar"></i> Update Bill</h2>
        <%- include('./partials/messages.ejs'); %>
        <div action="/add-bill" method="POST">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" name="name" class="form-control bill-input" value="<%= bill.name %>" required>
          </div>
          <div class="form-group">
            <label for="amount">Amount Due</label>
            <input type="number" name="amount" class="form-control bill-input" min="0.01" step="0.01"
              value="<%= bill.amount %>" required>
          </div>
          <div class="form-group">
            <label for="date">Next Billing Date</label>
            <input type="date" name="date" class="form-control bill-input" min="<%= today %>" value="<%= billDate %>" required>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary shadow"><a id="dashboard" href="/dashboard">Cancel</a></button>
            <button type="submit" class="btn btn-primary shadow">UPDATE BILL</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>