<%- include('./partials/navbar.ejs') %>

<!-- UPDATE MODAL-->
<div class="modal fade" id="deleteBill__modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="text-danger">Delete Confirmation...</h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/bill/delete" method="POST">
          <p>Are you sure you want to delete <span class="font-weight-bold"><%= bill.name %></span>? Deleting this bill
            will also delete it's
            data for future use.</p>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary shadow" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-danger shadow">DELETE</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<!-- MODAL ENDS -->

<div class="container">
  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h2 class="text-center text-primary mb-3"><i class="fas fa-file-invoice-dollar"></i> Update Bill</h2>
        <%- include('./partials/messages.ejs'); %>
        <form action="/bill/save" method="POST">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" name="name" class="form-control bill-input" value="<%= bill.name %>" required>
          </div>
          <div class="form-group">
            <label for="amount">Amount Due</label>
            <input type="number" name="amount" class="form-control bill-input" min="0.01" step="0.01"
              value="<%= bill.amount %>" required>
          </div>
          <div class="form-group">
            <label for="date">Next Billing Date</label>
            <input type="date" name="date" class="form-control bill-input" value="<%= billDate %>" required>
          </div>
          <div class="text-center flex-container">
            <a id="dashboard" href="/dashboard"><button type="button" class="btn btn-secondary shadow">Cancel</button></a>
            <button type="submit" class="btn btn-primary shadow">UPDATE</button>
          </div>
        </form>
        <button id="deleteBill" class="btn btn-link" data-toggle="modal" data-target="#deleteBill__modal">
          DELETE
        </button>
      </div>
    </div>
  </div>
</div>